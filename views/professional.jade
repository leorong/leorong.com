doctype html
html(lang="en")
	head
		meta(charset="utf-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge")
		meta(name="viewport", content="width=device-width, initial-scale=1")
		meta(name="description", content="Professional Portfolio of Leo Rong")
		meta(name="keywords", content="Leo,Rong,Portfolio,Software,Engineer,Stanford")
		meta(name="author", content="Leo Rong")
		title Leo Rong - Professional Profolio
		// favicon
		link(rel="shortcut icon", type="image/png", href="images/professional.png")
		// Bootstrap Core CSS
		link(href="stylesheets/bootstrap.min.css", rel="stylesheet")
		// Custom CSS
		link(href="stylesheets/professional.css", rel="stylesheet")
		// Custom Fonts
		link(href="font-awesome/css/font-awesome.min.css", rel="stylesheet", type="text/css")
		link(href="http://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic", rel="stylesheet", type="text/css")
